<!DOCTYPE html>
<html>
<head>
  <title>StoresExplorer</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= render partial: "share/google_map" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <%= render partial: 'share/header' %>
    <div class="row-fluid">
      <div id="store_detail"></div>
    </div>
  </div>
  <script type="text/javascript">
    $(function() {
      window.storeController = new se.controllers.Store({store_id: '<%= params[:id] %>'})
    })
  </script>

</body>
</html>
