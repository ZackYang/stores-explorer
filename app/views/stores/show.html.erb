<!DOCTYPE html>
<html>
<head>
  <title>StoresExplorer</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= render partial: "share/google_map" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <%= render partial: 'share/header' %>
    <div class="row-fluid">
      <div class="span12">
        <h2><%= @store.name %></h2>
        <h3><%= @store.city %>, <%= @store.state %>, <%= @store.country %></h3>
        <div class="row-fluid">
          <div class="span12 map_canvas">
          </div>
          <div class="detail_container span5">
            <div class="detail_panel">
              <div class="address_panel">
                <%= @store.address %>
              </div>
              <div>
                <%= @store.categories %>
              </div>
              <div>
                <%= @store.neighborhood %>
              </div>
            </div>
            <div class="row-fluid">
              <div class="span12"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
  function initialize() {
    var mapOptions = {
      center: new google.maps.LatLng(-34.397, 150.644),
      zoom: 8
    };
    var map = new google.maps.Map($(".map_canvas")[0], mapOptions);
  }
  google.maps.event.addDomListener(window, 'load', initialize);
  </script>

</body>
</html>
