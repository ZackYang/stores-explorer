<div class="container-fluid">
  <div class="row-fluid">
    <div class="span8 left-bar">
      <div class="span12" id="search-form">
        <%= form_tag '/api/v1/searchers' do |f| %>
        <div class="row-fluid">
          <%= text_field_tag "searcher[name]", nil, class: 'span12', placeholder: 'Search' %>
        </div>
        <div class="row-fluid">
          <%= select_tag "searcher[country]", options_for_select([['US', 'us']]), class: 'span4' %>
          <%= text_field_tag "searcher[state]", nil, class: 'span4', placeholder: 'Region (State/Province)' %>
          <%= text_field_tag "searcher[city]", nil, class: 'span4', placeholder: 'Locality (Town/City)' %>
        </div>
        <div class="row-fluid">
          <%= select_tag "searcher[categories]", options_for_select(RETAIL_CATEGORIES.keys), class: 'span4' %>
          <%= text_field_tag "searcher[chain_name]", nil, class: 'span4', placeholder: 'Chain Name', disabled: true %>
          <%= submit_tag 'Search', class: 'span4 btn btn-primary' %>
        </div>
        <% end %>
      </div>
      <div class="span12" id="stores-list">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th> In DB </th>
              <th> Factual ID </th>
              <th> Store Name </th>
              <th> Address </th>
              <th> City </th>
              <th> State </th>
              <th> Zip </th>
              <th> Country </th>
              <th> Neighborhood </th>
              <th> Tel </th>
              <th> Website </th>
              <th> Latitude </th>
              <th> longitude </th>
              <th> Hours </th>
              <th> Categories </th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
    <div class="span4 right-bar">
      
    </div>
  </div>
</div>